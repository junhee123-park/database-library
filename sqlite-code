    ('ㅍ', '⠧', '111100', '종성 ㅍ'),
    ('ㅎ', '⠯', '111101', '종성 ㅎ')
]
cur.executemany("INSERT INTO braille_final (consonant, braille_unicode, dot_pattern, description) VALUES (?, ?, ?, ?)", finals)

# 4️⃣ 숫자 테이블
cur.execute("""
CREATE TABLE IF NOT EXISTS braille_number (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    number TEXT,
    braille_unicode TEXT,
    dot_pattern TEXT,
    description TEXT
)
""")

numbers = [
    ('1', '⠼⠁', '001111 100000', '숫자 1'),
    ('2', '⠼⠃', '001111 110000', '숫자 2'),
    ('3', '⠼⠉', '001111 100100', '숫자 3'),
    ('4', '⠼⠙', '001111 100110', '숫자 4'),
    ('5', '⠼⠑', '001111 100010', '숫자 5'),
    ('6', '⠼⠋', '001111 110100', '숫자 6'),
    ('7', '⠼⠛', '001111 110110', '숫자 7'),
    ('8', '⠼⠓', '001111 110010', '숫자 8'),
    ('9', '⠼⠊', '001111 101000', '숫자 9'),
    ('0', '⠼⠚', '001111 101100', '숫자 0')
]
cur.executemany("INSERT INTO braille_number (number, braille_unicode, dot_pattern, description) VALUES (?, ?, ?, ?)", numbers)

conn.commit()
conn.close()
print("✅ braille.db 생성 완료 — 초성, 중성, 종성, 숫자 테이블 포함!")
