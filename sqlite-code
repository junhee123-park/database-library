    ('ㄵ', '⠒⠨', '010010 001010', '종성 ㄵ'),
    ('ㄶ', '⠒⠥', '010010 101100', '종성 ㄶ'),
    ('ㄷ', '⠔', '010100', '종성 ㄷ'),
    ('ㄹ', '⠢', '001010', '종성 ㄹ'),
    ('ㄺ', '⠢⠁', '001010 100000', '종성 ㄺ'),
    ('ㄻ', '⠢⠑', '001010 100010', '종성 ㄻ'),
    ('ㄼ', '⠢⠘', '001010 010010', '종성 ㄼ'),
    ('ㄽ', '⠢⠠', '001010 001000', '종성 ㄽ'),
    ('ㄾ', '⠢⠓', '001010 110010', '종성 ㄾ'),
    ('ㄿ', '⠢⠙', '001010 100110', '종성 ㄿ'),
    ('ㅀ', '⠢⠥', '001010 101100', '종성 ㅀ'),
    ('ㅁ', '⠢', '001010', '종성 ㅁ'),
    ('ㅂ', '⠖', '010110', '종성 ㅂ'),
    ('ㅄ', '⠖⠠', '010110 001000', '종성 ㅄ'),
    ('ㅅ', '⠠', '001000', '종성 ㅅ'),
    ('ㅆ', '⠠⠠', '001000 001000', '종성 ㅆ'),
    ('ㅇ', '⠶', '111010', '종성 ㅇ'),
